<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:text="राशि का विवरण\nAmount Details"
                android:textColor="#9C27B0"
                android:textSize="@dimen/text_size_seventeen"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_cancel_id"
                android:layout_width="@dimen/dp35"
                android:layout_height="@dimen/dp35"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_cancel" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shadow"
            android:elevation="@dimen/dp10"
            android:orientation="vertical"
            android:padding="@dimen/dp5"
            android:translationZ="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvTotalCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp15"
                    android:text="आज आपने 10 हॉकर पंजीकृत किए हैं\nToday you have registered 10  hawker"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp15"
                    android:text="रेफरल द्वारा जमा की गई राशि\nAmount deposited by referral"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="@dimen/dp80"
                        android:layout_height="@dimen/dp50"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edittext_shadow"
                        android:backgroundTint="#9C27B0" />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp13"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10">

                <CheckBox
                    android:id="@+id/cbReceivedStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_toRightOf="@+id/cbReceivedStatus"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="@dimen/dp2"
                    android:text="मुझे हॉकर एप्लीकेशन से मेरा रेफर द्वारा कलेक्ट किया हुआ पैसा मिल गया है! \nI have received the money collected by my refer from the Hawker application."
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp11" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnReceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/edittext_shadow"
            android:backgroundTint="#9C27B0"
            android:fontFamily="@font/roboto_medium"
            android:text="Received Referral Money"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15" />


    </LinearLayout>

</LinearLayout>