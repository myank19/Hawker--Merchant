                                android:textColor="@color/black"
                                android:textSize="@dimen/sp13"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <ImageView
                                    android:layout_width="@dimen/dp40"
                                    android:layout_height="@dimen/dp40"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/circle_back" />

                                <TextView
                                    android:id="@+id/tv_total_call_id2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp13"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/reward_cardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:elevation="8dp"
                            android:padding="@dimen/margin5"
                            app:cardBackgroundColor="#9C27B0"
                            android:visibility="gone"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginRight="@dimen/dp10"
                                android:padding="@dimen/dp5">

                                <TextView
                                    android:id="@+id/tvrewards"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dp4"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="राशि का विवरण \nAmount Details"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp15" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_navigate_next"
                                    android:tint="@color/white" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/advertisement_cardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:elevation="8dp"
                            android:onClick="onClickAdvertisement"
                            android:padding="@dimen/margin5"
                            app:cardBackgroundColor="#02B3CC"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginRight="@dimen/dp10"
                                android:padding="@dimen/dp5">

                                <TextView
                                    android:id="@+id/tvrequest"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dp4"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="प्रस्ताव / विज्ञापन के लिए अनुरोध \nRequest for Offer/Advertisement"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp15" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_navigate_next"
                                    android:tint="@color/white" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

