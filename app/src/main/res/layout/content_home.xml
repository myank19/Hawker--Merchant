<!--                        </androidx.cardview.widget.CardView>-->
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_recycler_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradiant_back"
                        android:fontFamily="@font/roboto_bold"
                        android:padding="@dimen/dp5"
                        android:text="शेयर की गई स्थान सूची / Shared Location List"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp15" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_upcomingLocation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="@dimen/dp5"></androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        android:id="@+id/tv_notFound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dp20"
                        android:fontFamily="@font/roboto_bold"
                        android:text="कोई रिकॉर्ड नहीं मिला है।\nThere is no record found."
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp20"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/slide_image"
                    android:visibility="gone" />

            </RelativeLayout>


