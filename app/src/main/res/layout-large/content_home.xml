<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.Home"
    tools:showIn="@layout/app_bar_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_above="@+id/bottom_cardView"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/app_bar_background"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:id="@+id/imv_drawer_id"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/drawer"/>
                <TextView
                    android:textSize="@dimen/sp25"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hawker-Merchant"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/cardview_total_critical"
                    app:cardCornerRadius="5dp"
                    android:elevation="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:background="@drawable/gradiant_back"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/dp10">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp15"
                                    android:textStyle="bold"
                                    android:text="Shekhar Saini"
                                    android:id="@+id/tv_name_id"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp15"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/dp10"
                                    android:text="12498938493849"
                                    android:id="@+id/tv_number_id"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/dp5">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/dp25"
                                    android:background="@mipmap/business_name"
                                    android:backgroundTint="@color/white"
                                    android:id="@+id/iv_business_name"
                                    android:layout_height="@dimen/dp25" />
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tea Shop"
                                    android:id="@+id/tv_Business_name"
                                    android:fontFamily="@font/roboto_bold"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/sp15"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="@dimen/dp5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp15"
                                android:text="आज की कुल कॉल \nToday's Total Calls "
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp13"
                                android:textStyle="bold"/>
                            <RelativeLayout
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="@dimen/dp45"
                                    android:layout_height="@dimen/dp45"
                                    android:background="@drawable/circle_back"/>
                                <TextView
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp15"
                                    android:textStyle="bold"
                                    android:text="0"
                                    android:id="@+id/tv_total_call_id"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/reward_cardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:padding="@dimen/margin5"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="#9C27B0"
                            android:elevation="8dp">
                            <RelativeLayout
                                android:padding="@dimen/dp5"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dp4"
                                    android:fontFamily="@font/roboto_bold"
                                    android:id="@+id/tvrewards"
                                    android:textColor="@color/white"
                                    android:text="राशि का विवरण \nAmount Details"
                                    android:textSize="@dimen/sp18"/>

                                <ImageView
                                    android:src="@drawable/ic_navigate_next"
                                    android:tint="@color/white"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/advertisement_cardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:padding="@dimen/margin5"
                            app:cardCornerRadius="5dp"
                            android:onClick="onClickAdvertisement"
                            app:cardBackgroundColor="#02B3CC"
                            android:elevation="8dp">
                            <RelativeLayout
                                android:padding="@dimen/dp5"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dp6"
                                    android:fontFamily="@font/roboto_bold"
                                    android:id="@+id/tvrequest"
                                    android:textColor="@color/white"
                                    android:text="प्रस्ताव / विज्ञापन के लिए अनुरोध \nRequest for Offer/Advertisement"
                                    android:textSize="@dimen/sp18"/>

                                <ImageView
                                    android:src="@drawable/ic_navigate_next"
                                    android:tint="@color/white"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/referral_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp5"
                            android:padding="@dimen/margin5"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="#FF5722"
                            android:elevation="8dp">
                            <RelativeLayout
                                android:padding="@dimen/dp5"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_toLeftOf="@+id/idrelative"
                                    android:layout_marginRight="@dimen/dp5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dp6"
                                    android:fontFamily="@font/roboto_bold"
                                    android:id="@+id/tvreferralcode"
                                    android:textColor="@color/white"
                                    android:text="आपका पंजीकृत मोबाइल नंबर है\nYour registered mobile number is"
                                    android:textSize="@dimen/sp18"/>

                                <RelativeLayout
                                    android:id="@+id/idrelative"
                                    android:src="@drawable/ic_navigate_next"
                                    android:tint="@color/white"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_width="150dp"
                                        android:layout_height="@dimen/dp50"
                                        android:background="@drawable/edittext_shadow" />

                                    <TextView
                                        android:id="@+id/tvReferral"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/sp15"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_recycler_layout"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp5"
                android:orientation="vertical">
                <TextView
                    android:background="@drawable/gradiant_back"
                    android:padding="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp18"
                    android:fontFamily="@font/roboto_bold"
                    android:text="शेयर की गई स्थान सूची / Shared Location List"
                    android:textColor="@color/white"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rv_upcomingLocation">
                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:id="@+id/tv_notFound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="There is no record found."
                    android:textSize="@dimen/sp22"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_cardView"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:padding="@dimen/margin5"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/greylight"
            android:elevation="8dp">
            <RelativeLayout
                android:padding="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp3"
                    android:id="@+id/tv_duty_on_hindi"
                    android:textColor="@color/black"
                    android:text="ड्यूटी"
                    android:textSize="@dimen/sp18"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp3"
                    android:layout_below="@+id/tv_duty_on_hindi"
                    android:id="@+id/tv_duty_on_english"
                    android:text="Duty"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18"/>
                <Switch
                    android:id="@+id/swActiveInactive_id"
                    android:layout_width="@dimen/dp100"
                    android:drawablePadding="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_height="@dimen/dp50"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>




    </RelativeLayout>


</LinearLayout>